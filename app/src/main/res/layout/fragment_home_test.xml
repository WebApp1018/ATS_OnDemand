<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:barchart="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/btn_bg_white_fill"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job"
                                android:textSize="10sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="8dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/down_arrow" />

                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="Search"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/search_icon" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorHomeBg"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/stats"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_18"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="@color/graytext" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="35dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/layout_one"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/circlebg_moved"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/movedtxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ubuntu_b"
                                            android:text="12"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="28dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginBottom="2dp"
                                            android:text="@string/moved"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/txt_10" />

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginTop="2dp"
                                            android:padding="3dp"
                                            android:src="@drawable/moved_icon" />

                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent" />

                                <LinearLayout
                                    android:id="@+id/layout_two"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/circlebg_job"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/jobstxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ubuntu_b"
                                            android:text="2"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="28dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginBottom="2dp"
                                            android:text="Jobs"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/txt_10" />

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginTop="2dp"
                                            android:padding="3dp"
                                            android:src="@drawable/icon_jobs"
                                            barchart:tint="@color/colorWhite" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="@dimen/txt_18"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/lyt_three"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/circlebg_candidate"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/newcandidatetxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ubuntu_b"
                                            android:text="5"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="28dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/newcandidates"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/txt_10" />

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginTop="2dp"
                                            android:padding="3dp"
                                            android:src="@drawable/candidate_white_icon" />

                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent" />

                                <LinearLayout
                                    android:id="@+id/lyt_four"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/circlebg_schedule"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/todaytxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ubuntu_b"
                                            android:text="5"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="28dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginBottom="2dp"
                                            android:text="@string/todayschedule"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/txt_10" />

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginTop="2dp"
                                            android:padding="3dp"
                                            android:src="@drawable/calendar" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lyt_five"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/circlebg_saved"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/savedtxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubuntu_b"
                                        android:text="5"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="28dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/savedjobs"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/txt_10" />

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="2dp"
                                        android:padding="3dp"
                                        android:src="@drawable/calendar" />

                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:background="@color/colorWhite"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/txt_15"
                                    android:text="@string/chart"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_18"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginLeft="150dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="150dp"
                                    android:background="@color/colorBlack" />

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/chart1"
                                    android:layout_width="match_parent"
                                    android:layout_height="350dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:background="@color/colorWhite"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="90dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="15dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/lyt_year"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/txv_year"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:text="@string/YEAR" />

                                                <View
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="2dp"
                                                    android:background="@color/graytext" />

                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/lyt_month"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:visibility="gone"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:text="@string/MONTH" />

                                                <View
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="2dp"
                                                    android:background="@color/colorPrimary" />

                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/lyt_week"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:visibility="gone"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:text="@string/WEEK" />

                                                <View
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="2dp"
                                                    android:background="@color/blue_button" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/txt_10">

                                        <com.github.mikephil.charting.charts.BarChart
                                            android:id="@+id/barchart1"
                                            android:layout_width="match_parent"
                                            android:layout_height="300dp" />

                                        <SeekBar
                                            android:id="@+id/seekBar2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_margin="8dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_toLeftOf="@+id/tvYMax"
                                            android:max="200"
                                            android:paddingBottom="12dp"
                                            android:visibility="gone" />

                                        <SeekBar
                                            android:id="@+id/seekBar1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_above="@+id/seekBar2"
                                            android:layout_margin="8dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginBottom="35dp"
                                            android:layout_toLeftOf="@+id/tvXMax"
                                            android:max="1500"
                                            android:paddingBottom="12dp"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/tvXMax"
                                            android:layout_width="60dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBottom="@+id/seekBar1"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="15dp"
                                            android:gravity="right"
                                            android:text="@string/dash"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/tvYMax"
                                            android:layout_width="60dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBottom="@+id/seekBar2"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="15dp"
                                            android:gravity="right"
                                            android:text="@string/dash"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:visibility="gone" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearJobhistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_10"
            android:layout_marginTop="@dimen/txt_10"
            android:layout_marginRight="@dimen/txt_10"
            android:layout_marginBottom="@dimen/txt_10" />
    </LinearLayout>

</FrameLayout>