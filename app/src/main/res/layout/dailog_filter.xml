                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/txt_search3"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:padding="3dp"
                    android:src="@drawable/search" />

