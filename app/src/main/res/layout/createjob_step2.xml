<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City/Town"
            android:textSize="@dimen/txt_12" />

        <EditText
            android:id="@+id/edt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:hint="Please input city/town"
            android:textColor="@color/black"
            android:textColorHint="@color/graytext"
            android:textCursorDrawable="@drawable/cursor_primary"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/txt_10"
            android:background="@color/graytext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="@dimen/txt_12" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_country"
            android:layout_width="match_parent"
            app:ms_text_color="@color/black"
            android:hint="Please select country"
            android:layout_marginLeft="-20dp"
            android:background="@drawable/btn_outline_black"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graytext" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:textSize="@dimen/txt_12" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_state"
            android:layout_width="match_parent"
            app:ms_text_color="@color/black"
            android:hint="Please select state"
            android:layout_marginLeft="-20dp"
            android:background="@drawable/btn_outline_black"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graytext" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zip/Postal Code"
            android:textSize="@dimen/txt_12" />

        <EditText
            android:id="@+id/edt_postalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:hint="Please input city/town"
            android:textColor="@color/black"
            android:textColorHint="@color/graytext"
            android:textCursorDrawable="@drawable/cursor_primary"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/txt_10"
            android:background="@color/graytext" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Location"
            android:textSize="@dimen/txt_12" />

        <EditText
            android:id="@+id/edt_addlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:hint="Please input additional location"
            android:textColor="@color/black"
            android:textColorHint="@color/graytext"
            android:textCursorDrawable="@drawable/cursor_primary"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/txt_10"
            android:background="@color/graytext" />
    </LinearLayout>

</LinearLayout>