<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/txt_10"
        android:layout_marginRight="@dimen/txt_10"
        android:layout_marginBottom="@dimen/txt_10"
        android:background="@drawable/jobs_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="Schedule Title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textdarkgray"
            android:textSize="@dimen/txt_15"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/lyt_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_10"
                android:layout_marginBottom="@dimen/txt_10"
                android:background="@drawable/jobs_bg"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time:"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_12" />
                    <TextView
                        android:id="@+id/txv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5:00AM"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_12" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time :"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_12" />
                    <TextView
                        android:id="@+id/txv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00AM"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_12" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center">
                <TextView
                    android:id="@+id/view_candidate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Candidate"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg_yellow"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:padding="8dp"
                    android:textSize="@dimen/txt_12" />
                <TextView
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:padding="8dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_bg_green"
                    android:text="Confim"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />
            <TextView
                android:id="@+id/txv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday, February 24, 2023"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_12" />



        </LinearLayout>
    </LinearLayout>



</LinearLayout>