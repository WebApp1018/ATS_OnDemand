<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/txt_10"
        android:layout_marginRight="@dimen/txt_10"
        android:layout_marginBottom="8dp"
        android:background="@drawable/jobs_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/txt_10"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="6.5">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="110dp">
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_retry_round">
                    <TextView
                        android:id="@+id/txv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="IB"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="35sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone">

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageView1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/txt_10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_dummy"
                        app:riv_corner_radius="2dip"
                        app:riv_mutate_background="true" />


                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/txt_score"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/circlebg_lighble"
                            android:gravity="center"
                            android:text="110"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="9sp" />
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-62dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/circlebg_lighble"
                android:textAlignment="center"
                android:visibility="gone"/>


            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="-62dp"
                android:text="1"
                android:visibility="gone"
                android:background="@drawable/circlebg_lighble"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_12" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edwin Johnson"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_17"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="2 hrs ago"
                        android:textColor="@color/graytext"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/txt_15"
                                android:layout_height="@dimen/txt_15"
                                android:layout_gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/circleoutline" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="@string/email" />

                            <TextView
                                android:id="@+id/txt_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:text="a@gmail.com" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/txt_13"
                                android:layout_height="@dimen/txt_13"
                                android:layout_gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/circleoutline" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="@string/source" />

                            <TextView
                                android:id="@+id/txv_source"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="New"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/txt_13"
                                android:layout_height="@dimen/txt_13"
                                android:layout_gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/circleoutline" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="@string/job_title"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/txt_jobapplied"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Java Developer"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_11" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/txt_13"
                                android:layout_height="@dimen/txt_13"
                                android:layout_gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/circleoutline" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="@string/recruit_flow"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/txt_recruit_flow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Video Interview"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_11" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>