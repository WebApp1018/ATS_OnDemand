<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/header_back_two" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_bg_white_fill"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Schedule Overview"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/candidates"
                        android:textSize="@dimen/txt_12" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_candidate"
                        android:layout_width="match_parent"
                        app:ms_text_color="@color/black"
                        android:hint="Please select candidate"
                        android:background="@drawable/btn_outline_black"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/txt_20"
                        android:background="@color/graytext" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/job_select"
                        android:textSize="@dimen/txt_12" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_job"
                        android:layout_width="match_parent"
                        app:ms_text_color="@color/black"
                        android:hint="Please select job"
                        android:background="@drawable/btn_outline_black"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/graytext" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Type"
                        android:textSize="@dimen/txt_12" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_type"
                        android:layout_width="match_parent"
                        app:ms_text_color="@color/black"
                        android:hint="Please select type"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/graytext" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Subject"
                        android:textSize="@dimen/txt_12" />

                    <EditText
                        android:id="@+id/edt_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:hint="Please input subject"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graytext"
                        android:textCursorDrawable="@drawable/cursor_primary"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/txt_10"
                        android:layout_marginRight="@dimen/txt_20"
                        android:background="@color/graytext" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Location"
                        android:textSize="@dimen/txt_12" />

                    <EditText
                        android:id="@+id/edt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:hint="Please input location"
                        android:text="MN Mafrketing, Red Bank, New Jersey"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graytext"
                        android:textCursorDrawable="@drawable/cursor_primary"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/txt_10"
                        android:layout_marginRight="@dimen/txt_20"
                        android:background="@color/graytext" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_bg_white_fill"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Schedule Internal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/timezone"
                        android:textSize="@dimen/txt_12" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_timezone"
                        android:layout_width="match_parent"
                        app:ms_text_color="@color/black"
                        android:hint="Please select timezone"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/txt_10"
                        android:layout_marginRight="@dimen/txt_20"
                        android:background="@color/graytext" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/date"
                        android:textSize="@dimen/txt_12" />

                    <TextView
                        android:id="@+id/edt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:hint="Please select date"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graytext"
                        android:textCursorDrawable="@drawable/cursor_primary"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/txt_10"
                        android:layout_marginRight="@dimen/txt_20"
                        android:background="@color/graytext" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <CheckBox
                        android:id="@+id/checkbox_allday"
                        android:layout_width="match_parent"
                        android:buttonTint="@color/colorPrimary"
                        android:text="No Time(All Day Event)"
                        android:layout_height="25dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Start Time"
                            android:textSize="@dimen/txt_12" />

                        <TextView
                            android:id="@+id/edt_starttime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:hint="Start Time"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graytext"
                            android:textCursorDrawable="@drawable/cursor_primary"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/txt_10"
                            android:layout_marginRight="@dimen/txt_20"
                            android:background="@color/graytext" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="End Time"
                            android:textSize="@dimen/txt_12" />

                        <TextView
                            android:id="@+id/edt_endtime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:hint="Please select end time"
                            android:textColor="@color/black"
                            android:textColorHint="@color/graytext"
                            android:textCursorDrawable="@drawable/cursor_primary"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/txt_10"
                            android:layout_marginRight="@dimen/txt_20"
                            android:background="@color/graytext" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/comment"
                        android:textSize="@dimen/txt_12" />

                    <com.htmleditor.HtmlTextEditor
                        android:id="@+id/html_editor"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_height="200dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/add_schedule"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_bg_yellow"                android:text="Send"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
