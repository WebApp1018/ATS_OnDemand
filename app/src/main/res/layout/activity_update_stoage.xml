<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".activities.candidate.UpdateStoageActivity">

    <include layout="@layout/header_back_two" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyt_page2"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/txt_10"
            android:layout_marginRight="@dimen/txt_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_select_blue_left"
                        android:text="@string/male"
                        android:textAllCaps="false"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_unselect_gray_right"
                        android:text="@string/female"
                        android:textAllCaps="false"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white_black"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/ethancity"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"  />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_ethancity"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    app:ms_text_color="@color/black"
                    android:textAlignment="center"
                    app:ms_padding_left="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_outline_black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/disablity"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_dis_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_select_blue_left"
                        android:text="@string/yes"
                        android:textAllCaps="false"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_dis_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_unselect_gray_right"
                        android:text="@string/no"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/protect_veteran"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_ver_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_select_blue_left"
                        android:text="@string/yes"
                        android:textAllCaps="false"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_ver_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_unselect_gray_right"
                        android:text="@string/no"
                        android:textAllCaps="false"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white_black"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/vetaran"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"  />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_vetaran"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    app:ms_text_color="@color/black"
                    android:textAlignment="center"
                    app:ms_padding_left="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_outline_black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white_black"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/source_"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"  />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_source"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    app:ms_text_color="@color/black"
                    android:textAlignment="center"
                    app:ms_padding_left="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_outline_black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ListView
                android:id="@+id/list_jobs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_margin="10dp">
            </ListView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyt_page3"
        android:visibility="gone"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_white_black"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/applied_job"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"  />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_jobselection"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    app:ms_text_color="@color/black"
                    android:textAlignment="center"
                    app:ms_padding_left="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_outline_black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_white_black"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/type"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"  />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    app:ms_text_color="@color/black"
                    android:textAlignment="center"
                    app:ms_padding_left="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_outline_black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView android:id="@+id/txv_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:hint="@string/add_date"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/txt_color"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_birthday"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    app:tint="@color/black" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_white_black"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/message"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"  />
                <EditText
                    android:id="@+id/edt_message"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:maxLines="4"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:hint="@string/message"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/private_"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"  />
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toogle_private"
                    android:layout_width="60dp"
                    app:tbOnColor="@color/colorPrimary"
                    app:tbOffColor="@color/boder_color"
                    android:layout_marginLeft="5dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true">
                </com.zcw.togglebutton.ToggleButton>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right|center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/rank"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"  />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/txv_minus"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_rectangle_round"
                            android:text="-"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/txt_ranking"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:text="5"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:inputType="number"
                            android:singleLine="true" />
                        <TextView
                            android:id="@+id/txv_plus"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_rectangle_round"
                            android:text="+"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="22sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyt_page4"
        android:visibility="gone"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/jobs_bg"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_marginRight="@dimen/txt_10"
                    android:text="@string/skill_label"
                    android:textColor="@color/black" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_skill"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_outline_black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/jobs_bg"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@+id/txtsubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_marginRight="@dimen/txt_10"
                    android:text="@string/quicknote"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/notes_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notes_title"
                    android:background="@android:color/transparent"
                    android:gravity="top|left"
                    android:hint="Enter Quick Note"
                    android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
                    android:lines="3"
                    android:maxLength="500"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/jobs_bg"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_marginRight="@dimen/txt_10"
                    android:text="@string/score"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/edit_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="top|left"
                    android:hint="Enter Score"
                    android:inputType="numberDecimal"
                    android:lines="3"
                    android:maxLength="500"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/jobs_bg"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_marginRight="@dimen/txt_10"
                    android:text="@string/color"
                    android:textColor="@color/black" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_color"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_outline_black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_preview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_yellow"
            android:text="@string/back"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_18"
            android:visibility="gone"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_yellow"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>