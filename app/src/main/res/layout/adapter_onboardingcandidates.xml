<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:progressview="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/txt_10"
        android:layout_marginRight="@dimen/txt_10"
        android:layout_marginBottom="8dp"
        android:background="@drawable/jobs_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/txt_10"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="6.5">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_retry_round">
                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="IB"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="35sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:visibility="gone">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/txt_10"
                    android:layout_weight="0.5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dummy"
                    app:riv_corner_radius="2dip"
                    app:riv_mutate_background="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-62dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/circle_blue"
                    android:textAlignment="center"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-27dp"
                    android:layout_marginTop="67dp"
                    android:text="110"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_12" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="6.5"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edwin Johnson"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_17"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txv_notidate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="2 hrs ago"
                        android:visibility="gone"
                        android:textColor="@color/graytext"
                        android:textSize="@dimen/txt_13"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="Edwin@gmail.com"
                                android:textSize="@dimen/txt_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/txt_13"
                                android:layout_height="@dimen/txt_13"
                                android:layout_gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/circleoutline" />

                            <TextView
                                android:id="@+id/txv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Java Developer"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/txt_13"
                                    android:layout_height="@dimen/txt_13"
                                    android:layout_gravity="center"
                                    android:padding="2dp"
                                    android:src="@drawable/circleoutline" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="@string/start_date"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/txv_startdate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="20/5/2018"
                                    android:textColor="@color/blue_button"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/txt_13"
                                    android:layout_height="@dimen/txt_13"
                                    android:layout_gravity="center"
                                    android:padding="2dp"
                                    android:src="@drawable/circleoutline" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="@string/hire_date"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/end_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="20/5/2018"
                                    android:textColor="@color/blue_button"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_progress"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="3.5"
                android:layout_centerInParent="true"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="@color/lite_gray">
                <com.diffey.view.progressview.ProgressView
                    android:id="@+id/progressBarthree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    progressview:backgroundColor="#eee"
                    progressview:max="100"
                    progressview:progress="20"
                    progressview:progressColor="#A6BFDE"
                    progressview:textColor="#eee"
                    progressview:textGravity="right" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/txt_10"
                android:text="20%"
                android:textColor="@color/green"
                android:textSize="@dimen/txt_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>